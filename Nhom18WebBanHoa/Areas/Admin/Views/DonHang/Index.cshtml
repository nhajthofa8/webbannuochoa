@model IEnumerable<Nhom18WebBanHoa.Models.Don_Hang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2></h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ten)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SDT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.diachi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tieude)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ngaytao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tongtien)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Trang_Thai.trangthai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nguoi_Dung.taikhoan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nguoi_Giao_Hang.ten)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SDT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.diachi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tieude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ngaytao)
            </td>
            <td>
                @Html.Raw(item.tongtien.GetValueOrDefault(0).ToString("N0"))
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trang_Thai.trangthai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nguoi_Dung.ten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nguoi_Giao_Hang.ten)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                @Html.ActionLink("Details", "Details", new { id = item.id })

            </td>
        </tr>
    }

</table>
