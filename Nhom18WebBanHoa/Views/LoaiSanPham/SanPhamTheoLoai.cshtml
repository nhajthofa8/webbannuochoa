@model PagedList.IPagedList<Nhom18WebBanHoa.Models.San_Pham>
@using PagedList.Mvc;
@{
    ViewBag.Title = "SanPhamTheoLoai";
    Layout = "~/Views/Layout/NguoiDungLayout.cshtml";
}
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>SẢN PHẨM NỔI BẬT</h2>
                </div>
                <div class="featured__controls">
                    <ul>
                        @Html.Action("_LoaiSanPhamDuoi", "LoaiSanPham")

                    </ul>
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="featured__item">
                        <div class="featured__item__pic set-bg" data-setbg="~/Content/img/featured/feature-1.jpg">
                            <a href="@Url.Action("Details", "Home", new { id = item.id})"><img src="~/Images/@item.hinh" /></a>
                            <ul class="featured__item__pic__hover">
                                <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                            </ul>
                        </div>
                        <div class="featured__item__text">
                            <h6><a href="@Url.Action("Details", "Home", new { id = @item.id})">@item.tenSP</a></h6>
                            <h5>@item.gia.GetValueOrDefault(0).ToString("N0") VND</h5>
                        </div>
                    </div>
                </div>
            }

        </div>
        <div class="product__pagination">

            @Html.PagedListPager(Model, page => Url.Action("SanPhamTheoLoai", new { page }))
        </div>
    </div>
</section>
